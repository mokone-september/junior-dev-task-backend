{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/sort-characters",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/api/sort-characters",
      "status": 404
    }
  ],
  "env": {
    "ALLOWED_ORIGINS": "https://your-app.vercel.app,http://localhost:3000"
  }
}